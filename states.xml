			<texture filename="images/play.png" ID="playbutton"/>
			<texture filename="images/exit.png" ID="exitbutton"/>
		</TEXTURES>
		<OBJECTS>
			<object type="button" x="500" y="200" width="200" height="100" textureID="playbutton" numFrames="1"	callbackID="1" animationSpeed="1"/>
			<object type="button" x="500" y="400" width="200" height="100" textureID="exitbutton" numFrames="1"
			callbackID="2" animationSpeed="1"/>
		</OBJECTS>
	</MAINMENU>

	<PLAY>
		<TEXTURES>
			<texture filename="images/player.png" ID="player"/>
			<texture filename="images/enemy.png" ID="enemy"/>
