			<texture filename="images/restart.png" ID="restart"/>
			<texture filename="images/mainmenu.png" ID="mainmenu"/>
			<texture filename="images/gameover.png" ID="gameover"/>
		</TEXTURES>
		<OBJECTS>
			<object type="button" x="500" y="400" width="185" height="100" textureID="restart" numFrames="0"	callbackID="1" animationSpeed="1"/>
			<object type="button" x="507" y="250" width="170" height="100" textureID="mainmenu" numFrames="0"	callbackID="2" animationSpeed="1"/>
